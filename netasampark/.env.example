APP_NAME="NetaSampark - Political CRM"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Kolkata
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=netasampark
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration (AWS SES)
MAIL_MAILER=ses
MAIL_HOST=email-smtp.ap-south-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=your_ses_username
MAIL_PASSWORD=your_ses_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=ap-south-1
AWS_BUCKET=your-s3-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# WhatsApp Business API (Meta)
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_API_SECRET=your_whatsapp_api_secret
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# SMS Gateway Configuration
SMS_GATEWAY=msg91
SMS_GATEWAY_KEY=your_sms_gateway_key
SMS_GATEWAY_SECRET=your_sms_gateway_secret
SMS_SENDER_ID=NETASMP

# Voice/IVR Configuration
VOICE_GATEWAY=exotel
VOICE_API_KEY=your_voice_api_key
VOICE_API_SECRET=your_voice_api_secret
VOICE_SENDER_ID=your_sender_id

# Payment Gateway Configuration
RAZORPAY_KEY=your_razorpay_key
RAZORPAY_SECRET=your_razorpay_secret
STRIPE_KEY=your_stripe_key
STRIPE_SECRET=your_stripe_secret

# Search Configuration (Meilisearch)
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=your_meilisearch_key

# Security Configuration
SESSION_LIFETIME=120
SESSION_SECURE_COOKIES=true
SESSION_SAME_SITE=lax
SANCTUM_STATEFUL_DOMAINS=your-domain.com

# File Upload Configuration
FILESYSTEM_DISK=s3
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# Queue Configuration
QUEUE_FAILED_DRIVER=database-uuids
HORIZON_DOMAIN=your-domain.com

# Monitoring Configuration
SENTRY_LARAVEL_DSN=your_sentry_dsn
SENTRY_TRACES_SAMPLE_RATE=0.1

# External API Configuration
OPENAI_API_KEY=your_openai_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Compliance Configuration
TRAI_DLT_TEMPLATE_ID=your_dlt_template_id
TRAI_DLT_ENTITY_ID=your_dlt_entity_id
EC_COMPLIANCE_ENABLED=true

# Feature Flags
FEATURE_AI_INSIGHTS=true
FEATURE_VOICE_DIALER=true
FEATURE_OFFLINE_SYNC=true
FEATURE_SOCIAL_INTEGRATION=false

# Rate Limiting
RATE_LIMIT_SMS=100
RATE_LIMIT_WHATSAPP=1000
RATE_LIMIT_EMAIL=500
RATE_LIMIT_API=1000

# Backup Configuration
BACKUP_DESTINATION=s3
BACKUP_RETENTION_DAYS=30
BACKUP_NOTIFICATIONS=true

# Development Overrides (set to false in production)
DEVELOPMENT_MODE=false
DEBUG_QUERIES=false
CACHE_ENABLED=true
